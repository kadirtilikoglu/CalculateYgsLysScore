        <item name="android:layout_weight">0.2</item>
        <item name="android:hint">@string/dogru</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">5</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColor">@color/ygs</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColorHint">@color/ygs</item>
        <item name="android:textColorHighlight">@color/background</item>
        <item name="android:backgroundTint">@color/ygs</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
