<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_uni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="demirciy.ygslyspuanhesaplama.common.ActivityFindUni">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <LinearLayout
        style="@style/layoutFindUni"
        android:elevation="2sp"
        android:orientation="vertical"
        android:paddingBottom="8sp"
        android:paddingTop="8sp">

        <LinearLayout style="@style/layoutFindUni">

            <TextView
                android:id="@+id/tYgs1"
                style="@style/tFindUni"
                android:text="@string/ygs1" />

            <TextView
                android:id="@+id/tYgs2"
                style="@style/tFindUni"
                android:text="@string/ygs2" />

            <TextView
                android:id="@+id/tYgs3"
                style="@style/tFindUni"
                android:text="@string/ygs3" />

        </LinearLayout>

        <LinearLayout style="@style/layoutFindUni">

            <TextView
                android:id="@+id/tYgs4"
                style="@style/tFindUni"
                android:text="@string/ygs4" />

            <TextView
                android:id="@+id/tYgs5"
                style="@style/tFindUni"
                android:text="@string/ygs5" />

            <TextView
                android:id="@+id/tYgs6"
                style="@style/tFindUni"
                android:text="@string/ygs6" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/layoutFindUni"
        android:layout_marginTop="8sp"
        android:elevation="2sp"
        android:orientation="vertical">

        <LinearLayout style="@style/layoutFindUni">

            <EditText
                style="@style/edtFindUni"
                android:hint="@string/searchScore"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp" />

        <LinearLayout style="@style/layoutFindUni">

            <EditText
                style="@style/edtFindUni"
                android:hint="@string/searchdepart" />

        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp" />

        <LinearLayout style="@style/layoutFindUni">

            <EditText
                style="@style/edtFindUni"
                android:hint="@string/searchUni" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:background="@color/white"
        android:elevation="2sp" />

</LinearLayout>
