<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demirciy.ygslyspuanhesaplama.MainActivity"
    android:background="@color/background"
    >

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>


      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/rlButonUst"
          android:background="@color/beyaz"
          android:elevation="2sp">

          <LinearLayout
              android:id="@+id/llTr"
              style="@style/llYgs"
              android:layout_marginTop="16sp">

                  <TextView
                      android:text="@string/tr"
                      android:id="@+id/tTurkce"
                      style="@style/ygsDersler" />
                  <EditText
                      android:id="@+id/etYgsTrD"
                      style="@style/etYgsDogru"/>
                  <EditText
                      android:id="@+id/etYgsTrY"
                      style="@style/etYgsYanlis"/>
                  <EditText
                      android:id="@+id/etYgsTrN"
                      style="@style/etYgsNet"
                      />
              </LinearLayout>

          <LinearLayout
              style="@style/llYgs"
              android:id="@+id/llSos"
              android:layout_below="@+id/llTr">

              <TextView
                  android:text="@string/sos"
                  android:id="@+id/tSos"
                  style="@style/ygsDersler" />
              <EditText
                  android:id="@+id/etYgsSosD"
                  style="@style/etYgsDogru"/>
              <EditText
                  android:id="@+id/etYgsSosY"
                  style="@style/etYgsYanlis"/>
              <EditText
                  android:id="@+id/etYgsSosN"
                  style="@style/etYgsNet"/>
          </LinearLayout>

          <LinearLayout
              style="@style/llYgs"
              android:id="@+id/llMat"
              android:layout_below="@+id/llSos">

              <TextView
                  android:text="@string/mat"
                  android:id="@+id/tMat"
                  style="@style/ygsDersler" />
              <EditText
                  android:id="@+id/etYgsMatD"
                  style="@style/etYgsDogru"/>
              <EditText
                  android:id="@+id/etYgsMatY"
                  style="@style/etYgsYanlis"/>
              <EditText
                  android:id="@+id/etYgsMatN"
                  style="@style/etYgsNet"/>
          </LinearLayout>

          <LinearLayout
              style="@style/llYgs"
              android:id="@+id/llFen"
              android:layout_below="@+id/llMat">

              <TextView
                  android:text="@string/fen"
                  android:id="@+id/tFen"
                  style="@style/ygsDersler" />
              <EditText
                  android:id="@+id/etYgsFenD"
                  style="@style/etYgsDogru"/>
              <EditText
                  android:id="@+id/etYgsFenY"
                  style="@style/etYgsYanlis"/>
              <EditText
                  android:id="@+id/etYgsFenN"
                  style="@style/etYgsNet"/>
          </LinearLayout>

          <LinearLayout
              style="@style/llYgs"
              android:id="@+id/llToplam"
              android:layout_below="@+id/llFen"
              android:layout_marginTop="10sp"
              android:layout_marginBottom="16sp">

              <TextView
                  android:text="@string/toplam"
                  android:id="@+id/tToplam"
                  style="@style/ygsToplam"/>
              <TextView
                  android:id="@+id/tToplamD"
                  style="@style/ygsToplamD"/>
              <TextView
                  android:id="@+id/tToplamY"
                  style="@style/ygsToplamY"/>
              <TextView
                  android:id="@+id/tToplamN"
                  style="@style/ygsToplamN"/>
          </LinearLayout>

      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/llButon"
          android:layout_below="@+id/rlButonUst"
          android:layout_marginTop="24sp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="@string/lysuyari"
              android:typeface="serif"/>

      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/rlButonAlt"
          android:layout_below="@+id/llButon"
          android:layout_marginTop="16sp"
          android:background="@color/beyaz"
          android:elevation="2sp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/llygs12"
              android:layout_marginTop="16sp">

              <TextView
                  style="@style/ygsPuan"
                  android:id="@+id/tYgs1"
                  android:text="@string/ygs1"
                  android:textColor="@color/mf" />
              <TextView
                  style="@style/ygsPuan"
                  android:id="@+id/tYgs2"
                  android:text="@string/ygs2"
                  android:textColor="@color/mf" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/llygs34"
              android:layout_below="@id/llygs12"
              android:layout_marginTop="10sp">

              <TextView
                  style="@style/ygsPuan"
                  android:id="@+id/tYgs3"
                  android:text="@string/ygs3"
                  android:textColor="@color/ts" />
              <TextView
                  style="@style/ygsPuan"
                  android:id="@+id/tYgs4"
                  android:text="@string/ygs4"
                  android:textColor="@color/ts" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/llygs56"
              android:layout_below="@id/llygs34"
              android:layout_marginTop="10sp"
              android:layout_marginBottom="16sp">

              <TextView
                  style="@style/ygsPuan"
                  android:id="@+id/tYgs5"
                  android:text="@string/ygs5"
                  android:textColor="@color/tm" />
              <TextView
                  style="@style/ygsPuan"
                  android:id="@+id/tYgs6"
                  android:text="@string/ygs6"
                  android:textColor="@color/tm" />
          </LinearLayout>
      </RelativeLayout>

</RelativeLayout>