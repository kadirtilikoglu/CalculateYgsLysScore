        android:text="0"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:selectAllOnFocus="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_ygs_sosyal_dogru"
        android:layout_below="@+id/et_ygs_tr_dogru"
        android:layout_alignEnd="@+id/et_ygs_tr_dogru"
        android:layout_alignStart="@+id/et_ygs_tr_dogru"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sosyal"
        android:layout_below="@+id/et_ygs_tr_dogru"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_ygs_mat_net"
        android:layout_below="@+id/et_ygs_sosyal_net"
        android:layout_alignEnd="@+id/et_ygs_sosyal_net"
